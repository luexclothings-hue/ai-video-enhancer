# Server
NODE_ENV=development
PORT=3000
HOST=0.0.0.0

# Database
DATABASE_URL=postgresql://user:password@localhost:5432/video_enhancer?schema=public

# JWT
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_EXPIRES_IN=1h

# Google Cloud Platform
GCP_PROJECT_ID=your-gcp-project-id
GCS_BUCKET_VIDEOS_RAW=video-enhancer-raw
GCS_BUCKET_VIDEOS_ENHANCED=video-enhancer-enhanced
PUBSUB_TOPIC_VIDEO_JOBS=video-jobs

# Application
MAX_FILE_SIZE_MB=500
BCRYPT_ROUNDS=12

# Subscription Plans (minutes per month)
PLAN_FREE_VIDEOS_LIMIT=1
PLAN_FREE_DURATION_LIMIT_SECONDS=30
PLAN_CREATOR_MINUTES_LIMIT=30
PLAN_CREATOR_VIDEO_DURATION_LIMIT_SECONDS=120
PLAN_PRO_MINUTES_LIMIT=120
PLAN_PRO_VIDEO_DURATION_LIMIT_SECONDS=300
