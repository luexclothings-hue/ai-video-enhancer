{
  "name": "ai-video-enhancer",
  "version": "1.0.0",
  "description": "Professional AI video enhancement service using Stream-DiffVSR",
  "private": true,
  "workspaces": [
    "backend/apps/api"
  ],
  "scripts": {
    "dev": "docker-compose -f backend/docker-compose.yml up",
    "dev:api": "cd backend/apps/api && npm run dev",
    "build": "cd backend/apps/api && npm run build",
    "test": "cd backend/apps/api && npm test",
    "lint": "eslint . --ext .ts,.js",
    "lint:fix": "eslint . --ext .ts,.js --fix",
    "format": "prettier --write \"**/*.{ts,js,json,md}\"",
    "format:check": "prettier --check \"**/*.{ts,js,json,md}\"",
    "type-check": "cd backend/apps/api && npm run type-check",
    "prepare": "husky install",
    "commit": "cz"
  },
  "devDependencies": {
    "@commitlint/cli": "^18.4.3",
    "@commitlint/config-conventional": "^18.4.3",
    "@typescript-eslint/eslint-plugin": "^6.13.1",
    "@typescript-eslint/parser": "^6.13.1",
    "commitizen": "^4.3.0",
    "cz-conventional-changelog": "^3.3.0",
    "eslint": "^8.54.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-prettier": "^5.0.1",
    "husky": "^8.0.3",
    "lint-staged": "^15.2.0",
    "prettier": "^3.1.0"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "lint-staged": {
    "*.{ts,js}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,md}": [
      "prettier --write"
    ]
  },
  "engines": {
    "node": ">=20.0.0",
    "npm": ">=10.0.0"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/your-username/ai-video-enhancer.git"
  },
  "keywords": [
    "ai",
    "video-enhancement",
    "stream-diffvsr",
    "nodejs",
    "typescript",
    "fastify"
  ],
  "author": "Your Name",
  "license": "UNLICENSED"
}
